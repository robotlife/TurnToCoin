<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:id="@+id/lltop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="45dip"
                    android:background="#ffb0c9"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/img_left"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dip"
                        android:contentDescription="@null"
                        android:src="@mipmap/icon_arrow_left" />
                    <TextView
                        android:id="@+id/tvhead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="每日签到"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlhearder"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:background="@mipmap/bg_sign_header">



                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/llone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lltop"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_add1"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_gravity="center_horizontal"

                            android:layout_weight="1"
                            android:background="@mipmap/img_wqd"

                            android:gravity="center"
                            android:text="+5"
                            android:textColor="@color/hei"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_day1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/hei"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_add2"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_gravity="center_horizontal"

                            android:layout_weight="1"
                            android:background="@mipmap/img_wqd"

                            android:gravity="center"
                            android:text="+10"
                            android:textColor="@color/hei"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_day2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/hei"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_add3"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_gravity="center_horizontal"

                            android:layout_weight="1"
                            android:background="@mipmap/img_wqd"

                            android:gravity="center"
                            android:text="+15"
                            android:textColor="@color/hei"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_day3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/hei"
                            android:textSize="14sp" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout

                    android:id="@+id/lltwo"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_add4"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_gravity="center_horizontal"

                            android:layout_weight="1"
                            android:background="@mipmap/img_wqd"

                            android:gravity="center"
                            android:text="+20"
                            android:textColor="@color/hei"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_day4"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/hei"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_add5"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:background="@mipmap/img_wqd"
                            android:gravity="center"
                            android:text="+25"
                            android:textColor="@color/hei"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_day5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text=""
                            android:textSize="14sp"
                            android:textColor="@color/hei" />
                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_add6"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:background="@mipmap/img_wqd"
                            android:gravity="center"
                            android:text="+30"
                            android:textColor="@color/hei"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_day6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/hei"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rlthree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lltwo"
                    android:layout_marginTop="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ivhg"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="-5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_add7"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:background="@mipmap/img_wqd"
                            android:gravity="center"
                            android:text="+35"
                            android:textColor="@color/hei"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_day7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/hei"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivhg"
                        android:layout_width="43dp"
                        android:layout_height="22dp"
                        android:layout_centerHorizontal="true"
                        android:background="@mipmap/icon_hg" />

                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/ivbottom"
                android:layout_width="360dp"
                android:layout_height="144dp"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/llone"
                android:background="@mipmap/bg_bottom" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>